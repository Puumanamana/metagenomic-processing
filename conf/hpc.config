process.executor = 'slurm'

params {
    max_cpus = 19
    max_memory = 120.GB
    max_time = 3.d
}

singularity {
    enabled = true
    cacheDir = "$HOME/.singularity_images.cache"
}

process {
    executor = 'slurm'
    errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
    maxRetries = 1
    maxErrors = '-1'
}
